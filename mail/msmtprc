# The following are default values for all accounts
defaults
tls on
tls_starttls on
auth on
logfile ~/.msmtp.log
syslog off

account gmail
host smtp.gmail.com          
port 587                     
from heconghui@gmail.com   
tls_trust_file /etc/ssl/certs/ca-certificates.crt
user heconghui
#password yourpassword

account default : gmail
